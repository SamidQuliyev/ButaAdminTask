@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Skydash Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="../../vendors/feather/feather.css">
    <link rel="stylesheet" href="../../vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="../../vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="../../css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="../../images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-6 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="../../images/logo.svg" alt="logo">
                            </div>

                            <h3>"VTP-10" idarəetmə paneli</h3>

                         

                            <form method="post" class="pt-3">


                                <div class="form-group">

                                    <input asp-for="FullName" type="text" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Tam Adı">
                                    <span asp-validation-for="FullName" class="text-danger mb-3"> </span>
                                </div>

                                <div class="form-group">

                                    <input asp-for="UserName" type="text" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="İstifadəçi adı">
                                    <span asp-validation-for="UserName" class="text-danger mb-3"> </span>
                                </div>

                                <div class="form-group">
                                    <input asp-for="Email" type="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Email">
                                    <span asp-validation-for="Email" class="text-danger mb-3"> </span>
                                </div>

                                <div class="form-group">
                                    <input asp-for="Password" type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Parol">
                                    <span asp-validation-for="Password" class="text-danger mb-3"> </span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="CheckPassword" type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Parolu təkrarlayın">
                                    <span asp-validation-for="CheckPassword" class="text-danger mb-3"> </span>
                                </div>
                                <div class="mb-4">
                                    <div class="form-check">

                                    </div>
                                </div>
                                <div class="mt-3">
                                    <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit">Qeydiyyatdan keçin</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Artıq hesabım var <a asp-controller="Account" asp-action="Login" class="text-primary"> Daxil olun</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="../../vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../../js/off-canvas.js"></script>
    <script src="../../js/hoverable-collapse.js"></script>
    <script src="../../js/template.js"></script>
    <script src="../../js/settings.js"></script>
    <script src="../../js/todolist.js"></script>
    <!-- endinject -->
</body>

</html>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}
