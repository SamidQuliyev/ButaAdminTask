@model List<Members>
<div class="row">


    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-content-center">
                    <h4 class="card-title">İştirakçılar</h4>
                    <a asp-action="Create" class="btn btn-primary btn-md my-3 btn-rounded">Yarat</a>
                </div>
                <div class="table-responsive">

                    <table id="myTable" class="table table-bordered">
                        <thead>
                            <tr>
                              
                                <th>
                                    İştirakçı
                                </th>

                                <th>
                                    Yaşı
                                </th>
                                <th>
                                    Cinsi
                                </th>
                                <th>
                                    Təhsili
                                </th>
                                <th>
                                    Universiteti
                                </th>
                                <th>
                                    İxtisası
                                </th>
                                <th>
                                    Kursu
                                </th>
                                <th>
                                    Fəaliyyətlər
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Members members in Model)
                            {
                <tr>
                   

                    <td>
                        @members.FullName
                    </td>

                    <td>
                        @members.Age
                    </td>
                    <td>
                        @members.Gender
                    </td>
                    <td>
                        @members.Education
                    </td>
                    <td>
                        @members.University
                    </td>
                    <td>
                        @members.Profession
                    </td>
                    <td>
                        @members.Course
                    </td>



                    <td>
                       
                        <a class="btn btn-warning btn-md btn-rounded" asp-action="Detail"
                           asp-route-id="@members.Id">Ətraflı</a>
                        <a class="btn btn-primary btn-md  btn-rounded" asp-action="Update"
                           asp-route-id="@members.Id">Redaktə et</a>
                        <a class="btn btn-danger btn-md  btn-rounded" asp-action="Delete"
                           asp-route-id="@members.Id">Silin</a>
                       
                        



</tr>}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

